        <TextBlock Text="Event Type" FontSize="14" FontWeight="Bold" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbEventType_1" Grid.Row="2" Grid.Column="1" Margin="5,5,15,5" SelectedIndex="1" Grid.ColumnSpan="2">
            <ComboBoxItem Content="Reserve"></ComboBoxItem>
            <ComboBoxItem Content="Start Normal"></ComboBoxItem>
            <ComboBoxItem Content="Start Immediate"></ComboBoxItem>
            <ComboBoxItem Content="End Normal"></ComboBoxItem>
            <ComboBoxItem Content="End Immediate"></ComboBoxItem>
            <ComboBoxItem Content="Cancel"></ComboBoxItem>
        </ComboBox>
        <TextBlock Text="Server Info" FontSize="14" FontWeight="Bold" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="TbIpaddr" Grid.Row="3" Grid.Column="1" Margin="5,5,5,5" TextChanged="TbIpaddr_TextChanged"/>
        <TextBox x:Name="TbPort" Grid.Row="3" Grid.Column="2" Margin="5,5,15,5" TextChanged="TbPort_TextChanged" />
        <TextBlock Text="Event ID" FontSize="14" FontWeight="Bold" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0" Visibility="Hidden"/>
        <TextBox x:Name="TbEventID" Grid.Row="4" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="2" TextChanged="TbEventID_TextChanged" Visibility="Hidden"/>
        <TextBlock Text="Unique Program ID" FontSize="14" FontWeight="Bold" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="TbUnqProgramID" Grid.Row="5" Grid.Column="1" Margin="5,5,5,5" TextChanged="TbUnqProgramID_TextChanged"></TextBox>        
        <TextBlock Text="Preroll Time" FontSize="14" FontWeight="Bold" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="TbPreroolTime" Grid.Row="6" Grid.Column="1" Margin="5,5,5,5" TextChanged="TbPreroolTime_TextChanged"></TextBox>
        <TextBlock Text="Break duration" FontSize="14" FontWeight="Bold" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <TextBox x:Name="TbBreakDuration" Grid.Row="7" Grid.Column="1" Margin="5,5,5,5" TextChanged="TbBreakDuration_TextChanged"></TextBox>

        <ListView x:Name="LvLog_1" Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" Margin="20,5,20,5" MaxHeight="450" Grid.RowSpan="1" MinHeight="450" MinWidth="900" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Width="900" HorizontalAlignment="Stretch">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView AllowsColumnReorder="True" ColumnHeaderToolTip="EventLog Information">
                    <GridViewColumn DisplayMemberBinding="{Binding eventTime}">
                        <GridViewColumnHeader Width="140">EventTime
                        </GridViewColumnHeader>
                    </GridViewColumn>
                    <GridViewColumn Header="IP address" Width="90"  DisplayMemberBinding="{Binding ipAddress }"/>
                    <GridViewColumn Header="Port" Width="50" DisplayMemberBinding="{Binding port }"/>
                    <GridViewColumn Header="EventType" Width="100" DisplayMemberBinding="{Binding eventType}"/>
                    <GridViewColumn Header="EventID" Width="70" DisplayMemberBinding="{Binding eventId}"/>
                    <GridViewColumn Header="Unqiue PID" Width="90" DisplayMemberBinding="{Binding uniquePid}"/>
                    <GridViewColumn Header="Preroll Time" Width="90" DisplayMemberBinding="{Binding prerollTime}"/>
                    <GridViewColumn Header="Break duration" Width="90" DisplayMemberBinding="{Binding breakDuration}"/>
                    <GridViewColumn Header="Status" Width="80" DisplayMemberBinding="{Binding status}"/>
                </GridView>
            </ListView.View>
        </ListView>
