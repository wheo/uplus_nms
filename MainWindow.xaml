        <Button x:Name="BtnCue_1" FontSize="48" Click="BtnCue_Click" Content="Cue" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="20,10,10,20" FontWeight="Bold">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <ToggleButton x:Name="ToggleAuto" Grid.Column="2" Grid.Row="2" Margin="210,50,20,10" Checked="ToggleAuto_Changed" Unchecked="ToggleAuto_Changed">프리셋</ToggleButton>
